<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/game_all_shape"
            android:backgroundTint="@color/game_tv_title"
            android:gravity="center"
            android:text="@string/game_tv_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="40dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/game_tv_score"
                style="@style/game_tv_score"
                tools:text="SCORE\n512"/>
            <Button
                android:id="@+id/game_btn_new"
                style="@style/game_btn_new"
                android:text="@string/game_btn_new"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/game_tv_best"
                style="@style/game_tv_score"
                tools:text="BEST\n512"/>
            <Button
                android:id="@+id/game_btn_undo"
                style="@style/game_btn_new"
                android:text="@string/game_btn_undo"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/game_tv_hint"/>
    <LinearLayout
        android:id="@+id/game_layout_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/game_all_shape"
        android:backgroundTint="@color/game_field_bg"
        android:orientation="vertical"
        android:padding="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/game_tv_tile_01"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
            <TextView
                android:id="@+id/game_tv_tile_02"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
            <TextView
                android:id="@+id/game_tv_tile_03"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
            <TextView
                android:id="@+id/game_tv_tile_04"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/game_tv_tile_11"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
            <TextView
                android:id="@+id/game_tv_tile_12"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
            <TextView
                android:id="@+id/game_tv_tile_13"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
            <TextView
                android:id="@+id/game_tv_tile_14"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/game_tv_tile_21"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
            <TextView
                android:id="@+id/game_tv_tile_22"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
            <TextView
                android:id="@+id/game_tv_tile_23"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
            <TextView
                android:id="@+id/game_tv_tile_24"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/game_tv_tile_31"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
            <TextView
                android:id="@+id/game_tv_tile_32"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
            <TextView
                android:id="@+id/game_tv_tile_33"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
            <TextView
                android:id="@+id/game_tv_tile_34"
                style="@style/game_tv_tile"
                android:backgroundTint="@color/game_tile_0_bg" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>